<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Git">
        <EditTextPreference android:hint="server.com" android:title="Server" android:key="git_remote_server" android:inputType="textUri" />
        <EditTextPreference android:hint="path/to/repository" android:title="Remote location" android:key="git_remote_location" android:inputType="textUri" />
        <EditTextPreference android:hint="username" android:title="Username" android:key="git_remote_username" android:inputType="textPersonName" />
        <Preference android:title="SSH Key" android:key="ssh_key" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Crypto">
        <org.openintents.openpgp.util.OpenPgpListPreference android:title="Select OpenPGP Provider!" android:key="openpgp_provider_list" />
        <EditTextPreference android:hint="mail@somewhere.tld" android:title="Set your OpenPGP account" android:key="openpgp_account_name" android:inputType="textEmailAddress" />
        <Preference android:title="Select OpenPGP Key id" android:key="openpgp_key_id" />
    </PreferenceCategory>
</PreferenceScreen>